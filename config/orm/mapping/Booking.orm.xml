<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\CivitatisSoftware\Booking\Domain\Booking" table="booking">
        <id name="id" type="integer"/>

        <field name="numPax" type="integer"/>
        <field name="price" type="float"/>
        <field name="bookDate" type="datetime"/>
        <field name="doneDate" type="datetime"/>
        <field name="createdAt" type="datetime"/>
        <field name="updatedAt" type="datetime"/>

        <one-to-one field="activityID" target-entity="App\CivitatisSoftware\Activity\Domain\Activity">
            <cascade>
                <cascade-remove/>
            </cascade>
            <join-column name="activity_id" referenced-column-name="id"/>
        </one-to-one>
    </entity>
</doctrine-mapping>

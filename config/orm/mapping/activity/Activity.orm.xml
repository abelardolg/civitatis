<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\CivitatisSoftware\Activity\Domain\Activity" table="activity">
        <id name="id" type="integer"/>

        <field name="title" type="string" length="64"/>
        <field name="description" type="string" length="100"/>
        <field name="availabilityStartDate" type="datetime"/>
        <field name="availabilityEndDate" type="datetime"/>
        <field name="pricePerPax" type="float"/>
        <field name="popularity" type="integer"/>
        <field name="createdAt" type="datetime"/>
        <field name="updatedAt" type="datetime"/>

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="markAsUpdated"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
